# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Atlas Connection String
# Get yours at https://cloud.mongodb.com (free tier works great)
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/finance-tracker

# JWT Configuration
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=replace-this-with-a-random-32-char-string
JWT_EXPIRE=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Cookie
COOKIE_EXPIRE=7

# Frontend URL
CLIENT_URL=http://localhost:3000
